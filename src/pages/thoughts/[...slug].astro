---
import TagLinks from "@components/TagLinks.astro";
import Layout, { type Meta } from "@layouts/Layout.astro";
import { dateFormatter, getTags, toISODate } from "@lib/util";
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";

export const getStaticPaths = (async () => {
	const thoughts = await getCollection("thoughts");

	return thoughts.map((postPage) => ({
		params: { slug: postPage.id },
		props: { postPage },
	}));
}) satisfies GetStaticPaths;

const { postPage } = Astro.props;
const { Content } = await render(postPage);

const meta: Meta = {
	date: toISODate(postPage.data.date),
	description: postPage.data.description,
	section: "thoughts",
};

const tags = await getTags(postPage);
---

<Layout title={postPage.data.title} meta={meta}>
	<section>
		<a href="/thoughts" title="back to thoughts"><strong>thoughts</strong>/</a>
		<h1>{ postPage.data.title }</h1>
		<p><TagLinks tags={tags} /></p>
		<p>{ dateFormatter.format(postPage.data.date) }</p>

		<Content />
	</section>
</Layout>

<style>
	body {
		--theme: var(--thoughts);
	}

	iframe {
		border: none;
	}

	h1 .button {
		font-size: 1.25rem;
		margin-left: .5em;
	}
</style>
